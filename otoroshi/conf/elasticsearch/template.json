{
  "template": "$$$INDEX$$$-*",
  "settings": {
    "number_of_shards": 1,
    "index": {
    }
  },
  "mappings": {
    "_default_": {
      "date_detection": false,
      "dynamic_templates": [
        {
          "string_template": {
            "match": "*",
            "mapping": {
              "type": "text",
              "fielddata": true
            },
            "match_mapping_type": "string"
          }
        }
      ],
      "properties": {
        "@id": {
          "type": "keyword"
        },
        "@timestamp": {
          "type": "date"
        },
        "@created": {
          "type": "date"
        },
        "@product": {
          "type": "keyword"
        },
        "@type": {
          "type": "keyword"
        },
        "@service": {
          "type": "keyword"
        },
        "@env": {
          "type": "keyword"
        }
      }
    }
  }
}