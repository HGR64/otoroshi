{
  "name": "otoroshi-sidecar",
  "version": "1.5.0-dev",
  "description": "Sidecar to use otoroshi with ease in kubernetes",
  "main": "src/sidecar.js",
  "bin": "src/sidecar.js",
  "license": "MIT",
  "scripts": {
    "test": "nodemon src/test.js",
    "dev": "nodemon src/dev.js",
    "start": "node src/sidecar.js",
    "pkg": "pkg . && rm -rf ./binaries && mkdir -p ./binaries && mv otoroshi-sidecar* ./binaries/"
  },
  "pkg": {
    "assets": [],
    "targets": [
      "latest-macos",
      "latest-linux",
      "latest-win"
    ]
  },
  "devDependencies": {
    "nodemon": "2.0.6",
    "pkg": "4.4.9"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "express": "4.17.1",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.20",
    "moment": "^2.29.1",
    "node-fetch": "2.6.1",
    "query-string": "6.13.7",
    "ssl-root-cas": "^1.3.1",
    "uuid": "8.3.1"
  }
}
